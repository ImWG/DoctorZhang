<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WlakingCountActivuty" >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >
        
	<RelativeLayout
	    android:id="@+id/RelativeLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
            
     <Button
        android:id="@+id/button_WalkcounterON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_WalkcounterOFF"
        android:layout_alignBottom="@+id/button_WalkcounterOFF"
        android:layout_toRightOf="@+id/button_WalkcounterOFF"
        android:text="√" />

    <Button
        android:id="@+id/button_WalkcounterOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="28dp"
        android:text="×" />

    <TextView
        android:id="@+id/textView_Meter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_Counter"
        android:layout_alignBottom="@+id/textView_Counter"
        android:layout_alignLeft="@+id/button_WalkcounterON"
        android:layout_marginLeft="20dp"
        android:text="Meter"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_WalkcounterOFF"
        android:layout_below="@+id/button_WalkcounterOFF"
        android:layout_marginRight="20dp"
        android:layout_marginTop="43dp"
        android:text="Counter"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Meter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_launcher" />

    <ListView
        android:id="@+id/listView_record_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView_map" >

    </ListView>
    
    </RelativeLayout>
    </ScrollView>
</LinearLayout>